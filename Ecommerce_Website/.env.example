# Copy this file to `.env` and fill in real values for production/development as needed.
# DO NOT commit your real `.env` file to version control.

# Django settings
DJANGO_SECRET_KEY=replace-me-with-a-strong-secret
DJANGO_DEBUG=True

# Hosts (comma separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Email (example for Gmail SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-app-password
